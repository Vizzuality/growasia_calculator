<div class="c-slider-step js-slider-step -active">
  <!-- <h1>Liming and Dolomite</h1> -->
  <div class="slider-step-container">
    <span>
      Do you apply lime?
      <span class="c-field">
        <input type="checkbox" id="limeRice">
        <label for="limeRice"></label>
      </span>
    </span>
    <span>
      <span class="c-field -medium">
        <%= f.text_field :lime_amount, class: '-right' %>
        <span class="unit">kg per ha and yr</span>
      </span>

    </span>
    <span>
      Do you apply dolomite?
      <span class="c-field">
        <input type="checkbox" id="dolomiteRice">
        <label for="dolomiteRice"></label>
      </span>
    </span>
    <span>
      <span class="c-field -medium">
        <%= f.text_field :dolomite_amount, class: '-right' %>
        <span class="unit">kg per ha and yr</span>
      </span>
    </span>
  </div>
</div>
