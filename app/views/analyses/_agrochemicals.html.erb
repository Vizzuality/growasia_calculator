<div class="c-slider-step js-slider-step -active">
  <!-- <h1>Agrochemicals</h1> -->
  <div class="slider-step-container">
    <span>
      Do you apply agrochemicals </br> including fertilizers, pesticides, or herbicides?
      <span class="c-field">
        <input type="checkbox" id="agrochemicalRice">
        <label for="agrochemicalRice"></label>
      </span>
    </span>
    <span>
      <span class="c-field -little">
        <%= f.text_field :agrochemical_amount, class: '-right -js-numeric' %>
        <span class="unit">kg per ha and yr</span>
      </span>
    </span>
  </div>
</div>
