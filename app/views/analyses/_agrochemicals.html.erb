<div class="c-slider-step js-slider-step -active">
  <!-- <h1>Agrochemicals</h1> -->
  <div class="slider-step-container -light">
    <span class="text -questions">
      <div class="c-checkbox-box -big -inline">
        <div class="custom-checkbox">
          <input type="checkbox" id="agrochemicalRice">
          <label for="agrochemicalRice">Do you apply agrochemicals </br> including fertilizers, pesticides, or herbicides? <span><svg class='c-icon -small'><use xlink:href='#icon-close'></use></svg></span></label>
        </div>
      </div>
    </span>
    <span>
      <span class="c-field -little -light">
        <%= f.number_field :agrochemical_amount, class: '-right -js-numeric', autocomplete: 'off', min: '0' %>
        <span class="unit">kg per ha and yr</span>
      </span>
    </span>
  </div>
</div>
