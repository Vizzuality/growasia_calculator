<section class="l-analysis-main">
  <div class="wrapper">

    <header class="c-analysis-header">
      <div>
        <ul class="list">
          <li class="list-item">
            <span class="title text -summary-small">Country</span>
            <span class="value text -summary-big"><%= @analysis.geo_location.country %></span>
          </li>
          <li class="list-item">
            <span class="title text -summary-small">Region</span>
            <span class="value text -summary-big"><%= @analysis.geo_location.state %></span>
          </li>
        </ul>
        <ul class="list">
          <li class="list-item">
            <span class="title text -summary-small">Crop</span>
            <span class="value text -summary-big"><%= @analysis.display_crop %></span>
          </li>
          <li class="list-item">
            <span class="title text -summary-small">Area</span>
            <span class="value text -summary-big"><%= @analysis.area %> <em>ha</em></span>
          </li>
        </ul>
      </div>
    </header>

    <hr>

    <div id="analysisTotalView" class="c-analysis-total">
    </div>

    <hr>

    <div id="analysisChartsView" class="c-analysis-graphs">
      <div id="chart-1" class="c-graph">
        <div class="graph-header">
          <div class="title text -summary-big">Emission Sources</div>
          <div id="analysisToggleView" class="c-analysis-toggle">
            <ul>
              <li data-type="total" class="js-toggle-item -active">Total</li>
              <li data-type="total_per_yield" class="js-toggle-item ">Per yield</li>
            </ul>
            <div class="slide js-toggle-slider"></div>
          </div>
          <div class="legend">
            <ul>
              <li class="text -graph-legend -current"><span></span> Current practices</li>
              <li class="text -graph-legend -future"><span></span> Potential future</li>
            </ul>
          </div>
        </div>
        <div class="graph -is-not-printable"></div>
      </div>
    </div>

    <div id="analysisChartsViewPrint" class="c-analysis-graphs -is-printable" data-print="true">
      <div id="chart-print" class="c-graph">
        <div class="graph" style="width:235mm;"></div>
      </div>
    </div>

    <hr>

    <div id="analysisActions" class="c-analysis-actions">
      <ul class="c-btn-container -j-center -a-center">
        <li>
          <button type="button" name="button" class="btn -dark -with-icon js-btn-action" data-action="Save:toggle">
            <svg class="c-icon -small"><use xlink:href="#icon-save"></use></svg>
            <span>Bookmark</span>
          </button>
        </li>
        <li>
          <button type="button" name="button" class="btn -dark -with-icon js-btn-action" data-action="Print:toggle">
            <svg class="c-icon -small"><use xlink:href="#icon-print"></use></svg>
            <span>Print</span>
          </button>
        </li>
        <li>
          <button type="button" name="button" class="btn -dark -with-icon js-btn-action" data-action="Share:toggle">
            <svg class="c-icon -small"><use xlink:href="#icon-share"></use></svg>
            <span>Share</span>
          </button>
        </li>
      </ul>
    </div>

  <div class="l-analysis-advise">
    <%= link_to "/documents/Grow Asia Counter Methodology.pdf", target: "_blank" do %>
      <p class="text -link -medium -is-not-printable">Learn more about our methodology</p>
    <% end %>
  </div>
</section>

<section id="analysisSidebarView" class="l-analysis-sidebar -is-not-printable">
  <%= render 'analysis_sidebar', analysis: @analysis %>
</section>
<section class="l-analysis-sidebar -is-printable">
  <div class="c-analysis-sidebar -is-printable">
    <div class="input-group -header">
      <p class="text -print-resume">Your current practices</p>
    </div>
    <%= render 'printable_inputs', analysis: @analysis %>
    <div id="future-practices">
      <hr />
      <div class="input-group -header">
        <p class="text -print-resume">Future practices</p>
      </div>
      <div id="print-changed">
      </div>
    </div>
  </div>
</section>
