<div id="headerView" class="l-header c-header <%= (controller?('analyses') && action?('show')) ? '-yellow -analysis' : '' %>">

  <button class="btn-help js-btn-action" data-action="Info:toggle">
    <svg class="c-icon -medium">
      <use xlink:href="#icon-help"></use>
    </svg>
  </button>

  <div class="text-wrap">
    <h1 class="text -title">
      <%= link_to "Grow Asia Counter", root_path, class: "text -dark" %>
    </h1>
  </div>


  <div class="logo -header">
    <%= link_to "http://www.growasia.org", target: "_blank" do %>
      <svg>
        <use xlink:href="#icon-logo"></use>
      </svg>
    <% end %>
  </div>

  <div class="c-social">
    <div class="btn-social">
      <%= link_to "https://twitter.com/Grow_Asia" do %>
        <svg class="c-icon -small">
          <use xlink:href="#icon-twitter"></use>
        </svg>
      <% end %>
    </div>
    <div class="btn-social">
      <%= link_to "https://www.linkedin.com/company/grow-asia-partnership" do %>
        <svg class="c-icon -small">
          <use xlink:href="#icon-linkedin"></use>
        </svg>
      <% end %>
    </div>
    <div class="btn-social -mail">
      <%= mail_to "info@growasia.org", subject: "Grow Asia Counter" do %>
        <svg class="c-icon -small">
          <use xlink:href="#icon-mail"></use>
        </svg>
      <% end %>
    </div>
  </div>

</div>
